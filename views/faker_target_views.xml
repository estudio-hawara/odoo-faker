<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="faker_target_tree_view" model="ir.ui.view">
        <field name="name">faker.target.tree</field>
        <field name="model">faker.target</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_id"/>
            </tree>
        </field>
    </record>

    <record id="faker_target_form_view" model="ir.ui.view">
        <field name="name">faker.target.form</field>
        <field name="model">faker.target</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="model_id"/>
                </group>
                <notebook>
                    <page string="Fields">
                        <field name="field_ids">
                            <tree editable="bottom">
                                <field name="target_id" optional="hide"/>
                                <field name="model" optional="hide"/>
                                <field name="field_id"/>
                                <field name="value_type"/>
                                <field name="faker_generator" readonly="value_type != 'faker'"/>
                                <field name="faker_locale" readonly="value_type != 'faker'"/>
                                <field name="constant_value" readonly="value_type != 'constant'"/>
                                <field name="example"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="faker_target_action" model="ir.actions.act_window">
        <field name="name">Faker</field>
        <field name="res_model">faker.target</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>